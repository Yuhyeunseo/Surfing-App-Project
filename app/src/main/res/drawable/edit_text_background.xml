<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- 배경 색상 -->
    <solid android:color="#FFFFFF" />

    <!-- 테두리 설정 -->
    <stroke
        android:width="1dp"
        android:color="#CCCCCC" />

    <!-- 라운드 코너 -->
    <corners android:radius="8dp" />

    <!-- 패딩 (선택 사항) -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp" />
</shape>
